@page
@model ExcelManagement.DxBlazor.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row" style="margin:50px">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Please enter your credentials to login</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating" style="margin:10px">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating" style="margin:10px">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div style="margin:10px">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                @if (!String.IsNullOrEmpty(Model.FailedLogin))
                {
                    <div class="alert text-danger" role="alert">
                        <ul>
                            <li>
                                @Model.FailedLogin
                            </li>
                        </ul>
                    </div>
                }

            </form>
            <p></p>
            <div style="margin-top: 10px;">
                <a href="~/">Go Back</a>
            </div>
        </section>
    </div>
</div>